<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="GererEquipe.Controles.EntreeNumerique"
             Loaded="EntreeNumerique_Loaded">
    
    <HorizontalStackLayout HorizontalOptions="StartAndExpand">
        <Entry x:Name="txtValeur"
               MinimumWidthRequest="150"
               Placeholder="{Binding FormatExempleEntry, FallbackValue='12345'}"
               Text="{Binding Path=Valeur, Mode=TwoWay}"
               Unfocused="txtValeur_Unfocused" />
        <Label x:Name="lblMessageErreur"
               MinimumWidthRequest="50"
               Text="{Binding Path=LibelleErreur, Mode=TwoWay, FallbackValue=''}" />
    </HorizontalStackLayout>
</ContentView>
